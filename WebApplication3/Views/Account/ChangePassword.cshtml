@model FinanceAnalytic.Models.ViewModels.ChangePasswordVievModel


<div class="container">
    <div class="row">

        <h2>Изменение пароля</h2>
        <div class="col-md-4">
            <form asp-action="ChangePassword" asp-controller="Account">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="PasswordOld" class="control-label">Введите текущий пароль</label><span class="required">*</span><br />
                    <input asp-for="PasswordOld" class="form-control" />
                    <span asp-validation-for="PasswordOld" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PasswordNew" class="control-label">Введите новый пароль</label><span class="required">*</span> <br />
                    <input asp-for="PasswordNew" class="form-control" />
                    <span asp-validation-for="PasswordNew" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PasswordNewConfirm" class="control-label">Повторите пароль</label><span class="required">*</span><br />
                    <input asp-for="PasswordNewConfirm" class="form-control" />
                    <span asp-validation-for="PasswordNewConfirm" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Изменить" class="button_yellow_s" />
                </div>
            </form>
        </div>
    </div>
    </div>

