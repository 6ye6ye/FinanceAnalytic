@model FinanceAnalytic.Models.ViewModels.LoginViewModel




<link rel="stylesheet" href="~/css/account.css" />

<form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
    <div class="account_container">
        <div class="row align-items-center justify-content-center">

            <div class="col">
                <h2 class="text-center">Вход</h2>
                <div class="validation" asp-validation-summary="ModelOnly"></div>
                <div class="form-group">
                    <label asp-for="Login" class="control-label">Введите логин:</label><span class="required">*</span>
                    <input type="text" asp-for="Login" class="form-control" />
                    <span asp-validation-for="Login" class="text-danger" />
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label">Введите пароль:</label><span class="required">*</span>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger" />
                </div>
                <div class="form-group row justify-content-center">
                    <input type="submit" value="Войти" class="button_yellow_s" />
                </div>
            </div>
        </div>
    </div>
</form>




