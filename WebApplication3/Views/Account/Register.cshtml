@model FinanceAnalytic.Models.ViewModels.RegisterViewModel



<link rel="stylesheet" href="~/css/account.css" />

<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
    <div class="account_container">
        <div class="row align-items-center justify-content-center">

            <div class="col">
                <h2 class="text-center">Регистрация</h2>
                <div class="validation" asp-validation-summary="ModelOnly"></div>
                <div class="form-group">
                    <label class="control-label">Введите логин</label><span class="required">*</span>
                    <input type="text" asp-for="Login" class="form-control" />
                    <span asp-validation-for="Login" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label">Введите пароль</label><span class="required">*</span>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PasswordConfirm" class="control-label">Повторите пароль</label><span class="required">*</span>
                    <input asp-for="PasswordConfirm" class="form-control" />
                    <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Currencies" class="control-label">Выберите валюту учета</label>
                    @Html.DropDownListFor(Model => Model.SelectedCurrencyId, Model.Currencies as SelectList, null,
                     htmlAttributes: new { @class = "form-control", id = "SelectedCurrencyId" })
                </div>
                <div class="form-group row justify-content-center">
                    <input type="submit" value="Зарегистрироваться" class="button_yellow_s" />
                </div>
            </div>
        </div>
    </div>
</form>



