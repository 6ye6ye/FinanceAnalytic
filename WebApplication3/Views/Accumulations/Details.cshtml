    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">

    <div>
        <h4>Накопление</h4>
        <hr />
        <dl class="row">

            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.User.Login)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Date)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Date)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Goal)
            </dt>
            <dd class="col-sm-10">
