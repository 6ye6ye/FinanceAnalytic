@model FinanceAnalytic.Models.Models.Goal

@{
    ViewData["Title"] = "Редактирование";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    

    <h4>Цель</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label><span class="required">*</span>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Sum" class="control-label"></label><span class="required">*</span>
                    <input asp-for="Sum" class="form-control" />
                    <span asp-validation-for="Sum" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IsAchived" class="control-label"></label>
                    <input asp-for="IsAchived" />
                    <span asp-validation-for="IsAchived" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Изменить" class="button_yellow_s" /> |
                    <a asp-action="Index" class="button_yellow_s">Вернуться к списку</a>
                </div>
            </form>
        </div>
    </div>
</div>
