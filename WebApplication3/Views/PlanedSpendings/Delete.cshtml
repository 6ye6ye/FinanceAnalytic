@model FinanceAnalytic.Models.PlanedSpending

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">

    <h3>Вы уверены что хотите удалить данную запись? </h3>
    <div>
        <h4>Планируемый расход за период</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(Model => Model.PeriodBegin)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(Model => Model.PeriodBegin)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(Model => Model.PeriodEnd)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(Model => Model.PeriodEnd)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(Model => Model.Sum)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(Model => Model.Sum)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(Model => Model.SpendingSubCategory)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(Model => Model.SpendingSubCategory.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(Model => Model.SpendingCategory)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(Model => Model.SpendingCategory.Name)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Comments)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Comments)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Currency)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Currency.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.SumInCurrency)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.SumInCurrency)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CurrencyRate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CurrencyRate)
            </dd>


        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Удалить" class="button_yellow_s"/> |
            <a asp-action="Index" class="button_yellow_s">Вернуться к списку</a>
        </form>
    </div>
</div>