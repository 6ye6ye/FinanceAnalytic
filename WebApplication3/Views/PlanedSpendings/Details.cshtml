            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(Model => Model.PeriodBegin)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(Model => Model.PeriodEnd)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(Model => Model.PeriodEnd)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(Model => Model.Sum)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(Model => Model.Sum)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(Model => Model.SpendingSubCategory)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(Model => Model.SpendingSubCategory.Name)
            </dd>
            <dt class="col-sm-2">
