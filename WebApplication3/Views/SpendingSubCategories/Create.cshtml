@model FinanceAnalytic.Models.SpendingSubCategory

@{
    ViewData["Title"] = "Создание";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
   
   
    <div class="row">
        <div class="col-md-4">
            <h4>Подкатегория расходов</h4>
            <hr />
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="SpendingCategoryId" class="control-label"></label><span class="required">*</span>
                    <select asp-for="SpendingCategoryId" class="form-control" asp-items="ViewBag.SpendingCategoryId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label><span class="required">*</span>
                    <input name="name" required asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Добавить" class="button_yellow_s" />|
                    <a class="button_yellow_s" asp-action="Index">Вернуться к списку</a>
                </div>
            </form>
        </div>
    </div>
</div>
