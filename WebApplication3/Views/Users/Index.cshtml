@model FinanceAnalytic.Models.ViewModels.UserListViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="list_header row">
        <h1>Cписок пользователей</h1>
        <a class="button_yellow_s" asp-action="Create">Добавить</a>

    </div>
    <form method="get">
        <div class="row row_filters">

                @Html.DropDownList("userRole", Model.UserRoles as SelectList,
                               htmlAttributes: new { @class = "form-control" })
                <input name="Login" class="form-control" placeholder="Логин" />
                <input type="submit" value="Поиск" class="button_yellow_s" />

        </div>
    </form>

    <table class="table100 one_last_column">
        <thead>
            <tr class="row100 head">
                <th>
                    Логин
                </th>
                <th>
                    Роль
                </th>
                <th>
                    Дата регистрации
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Users)
            {
                <tr class="row100">
                    <td>
                        @Html.DisplayFor(modelItem => item.Login)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserRole.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RegistrationDate)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">
                            <img src="~/images/icon_edit.png" />
                        </a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">
                            <img src="~/images/icon_delete.png" />
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>